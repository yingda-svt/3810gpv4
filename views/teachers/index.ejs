<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Teacher Management</h1>
    <p class="text-muted mb-0">Track instructors and their expertise</p>
  </div>
  <form method="GET" class="d-flex gap-2">
    <input
      name="keyword"
      class="form-control"
      placeholder="Search by name or expertise"
      value="<%= query.keyword || '' %>"
    />
    <button class="btn btn-outline-secondary">Search</button>
  </form>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <% if (teachers.length === 0) { %>
      <div class="alert alert-info">No teachers added yet</div>
    <% } else { %>
      <div class="row g-3">
        <% teachers.forEach(teacher => { %>
          <div class="col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h2 class="h5"><%= teacher.name %></h2>
                <p class="text-muted mb-1"><%= teacher.email %></p>
                <p class="mb-1"><strong>Office:</strong> <%= teacher.office || 'Not set' %></p>
                <p class="mb-1"><strong>Expertise:</strong>
                  <% if (teacher.expertise?.length) { %>
                    <%= teacher.expertise.join(', ') %>
                  <% } else { %>
                    Not provided
                  <% } %>
                </p>
                <p class="flex-grow-1 mb-2"><%= teacher.bio || 'No bio available' %></p>
                <form action="/teachers/<%= teacher._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this teacher?')">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h5 mb-3">Add Teacher</h2>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="POST" class="d-grid gap-3">
          <div>
            <label class="form-label">Name</label>
            <input name="name" class="form-control" required />
          </div>
          <div>
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required />
          </div>
          <div>
            <label class="form-label">Office</label>
            <input name="office" class="form-control" />
          </div>
          <div>
            <label class="form-label">Expertise (comma separated)</label>
            <input name="expertise" class="form-control" placeholder="AI, UX, EdTech" />
          </div>
          <div>
            <label class="form-label">Bio</label>
            <textarea name="bio" class="form-control" rows="3"></textarea>
          </div>
          <button class="btn btn-primary w-100">Add Teacher</button>
        </form>
      </div>
    </div>
  </div>
</div>
